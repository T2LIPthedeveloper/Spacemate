<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="359dp"
        android:layout_height="404dp"
        android:background="@drawable/rectangle_1" />

    <TextView
        android:id="@+id/bookmark_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        tools:text="Sample Title" />

    <ImageView
        android:id="@+id/bookmark_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/bookmark_title"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/bookmark_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookmark_image"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        tools:text="Sample Description" />

    <TextView
        android:id="@+id/occupancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookmark_description"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        tools:text="30/45 seats available" />

    <Button
        android:id="@+id/booking_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/occupancy"
        android:layout_centerHorizontal="true"
        android:text="Book Now" />

</RelativeLayout>
