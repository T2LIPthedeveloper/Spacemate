<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Name" />

    <RadioGroup
        android:id="@+id/gender_selection"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/male_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="M" />

        <RadioButton
            android:id="@+id/female_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="F" />

        <RadioButton
            android:id="@+id/other_radio"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Other" />
    </RadioGroup>

    <EditText
        android:id="@+id/date_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Date"
        android:focusable="false"
        android:clickable="true"
        android:minHeight="48dp"/>

    <EditText
        android:id="@+id/start_time_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Start Time"
        android:focusable="false"
        android:clickable="true"
        android:minHeight="48dp"/>

    <EditText
        android:id="@+id/end_time_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select End Time"
        android:focusable="false"
        android:clickable="true"
        android:minHeight="48dp"/>

    <Button
        android:id="@+id/book_now_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onBookNowButtonClick"
        android:text="Book Now"
        android:layout_marginTop="16dp"/>

    <CheckBox
        android:id="@+id/group_submission_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Submission" />

    <ImageButton

        android:id="@+id/add_member_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add" />


    <LinearLayout
        android:id="@+id/add_member_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/add_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add member" />
        <EditText
            android:id="@+id/member_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter member name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/members_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>
