<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommonLocationActivity"
    android:orientation="vertical">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="10dp"
        android:background="@color/lighter_green"
        android:id="@+id/main_toolbar"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"/>
    </Toolbar>
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="10dp"
        android:background="@color/white"
        android:id="@+id/common_toolbar"
        android:layout_below="@id/main_toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cl_locTitle"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"/>
    </Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/main_scroll_view"
        android:layout_below="@id/common_toolbar"
        android:layout_above="@id/common_booking_button"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edittext_background"
                android:hint="Name"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:id="@+id/name_of_booker"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:id="@+id/genderRadioGroup">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:text="Female"
                    android:id="@+id/femaleButton"
                    android:onClick="onGenderRadioButtonClicked"
                    android:textSize="18sp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:text="Male"
                    android:id="@+id/maleButton"
                    android:onClick="onGenderRadioButtonClicked"
                    android:textSize="18sp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:text="Other"
                    android:id="@+id/otherButton"
                    android:onClick="onGenderRadioButtonClicked"
                    android:textSize="18sp"/>
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Table"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:padding="10dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="48dp"
                android:background="@drawable/booking_spinner_background"
                android:id="@+id/tableSpinner"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:padding="10dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="48dp"
                android:background="@drawable/booking_spinner_background"
                android:id="@+id/dateSpinner"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:padding="10dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="48dp"
                android:background="@drawable/booking_spinner_background"
                android:id="@+id/startTimeSpinner"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Time"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:padding="10dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="48dp"
                android:background="@drawable/booking_spinner_background"
                android:id="@+id/endTimeSpinner"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:id="@+id/teamRadioGroup">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:text="Team"
                    android:id="@+id/teamButton"
                    android:onClick="onTeamRadioButtonClicked"
                    android:textSize="18sp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:text="Individual"
                    android:id="@+id/individualButton"
                    android:onClick="onTeamRadioButtonClicked"
                    android:textSize="18sp"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical"
                android:id="@+id/hiddenLayout">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:text="Add Team Member"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:id="@+id/addTeamMemberButton"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Member 1"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:id="@+id/team_text1"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext_background"
                    android:hint="Name"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:id="@+id/team_name1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Member 2"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:id="@+id/team_text2"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext_background"
                    android:hint="Name"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:id="@+id/team_name2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Member 3"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:id="@+id/team_text3"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext_background"
                    android:hint="Name"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:id="@+id/team_name3"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Member 4"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:id="@+id/team_text4"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext_background"
                    android:hint="Name"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:id="@+id/team_name4"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Member 5"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:id="@+id/team_text5"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext_background"
                    android:hint="Name"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:id="@+id/team_name5"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/login_button_background"
        android:layout_margin="10dp"
        android:text="Book Space"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:id="@+id/common_booking_button"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>