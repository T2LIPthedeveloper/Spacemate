<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_assets.ProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/green"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/upper_lin">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_person_24"
            android:background="@drawable/profile_background"
            android:layout_margin="20dp"
            android:elevation="7dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="User Name"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:id="@+id/nameValue"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upper_lin"
        android:layout_margin="30dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_account_circle_24"
                    android:padding="10dp"
                    android:id="@+id/emailIcon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/emailIcon"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Email"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="username@example.com"
                        android:id="@+id/emailValue"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_menu_book_24"
                    android:padding="10dp"
                    android:id="@+id/termIcon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/termIcon"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Term information"/>
                    
                    <ViewSwitcher
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/term_vs">
                        <TextView
                            android:id="@+id/termValueViewer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:text="Term 4"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="TouchTargetSizeCheck" />

                        <EditText
                            android:id="@+id/termValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="Term 4"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                    </ViewSwitcher>
                </LinearLayout>

                <ImageView
                    android:id="@+id/termEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/baseline_edit_24"
                    tools:ignore="SpeakableTextPresentCheck" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_school_24"
                    android:padding="10dp"
                    android:id="@+id/pillarIcon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/pillarIcon"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Pillar"/>
                    <ViewSwitcher
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/pillar_vs">
                        <TextView
                            android:id="@+id/pillarValueViewer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:maxLength="3"
                            android:text="CSD"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="TouchTargetSizeCheck" />
                        <EditText
                            android:id="@+id/pillarValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="CSD"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                    </ViewSwitcher>

                </LinearLayout>

                <ImageView
                    android:id="@+id/pillarEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/baseline_edit_24"
                    tools:ignore="SpeakableTextPresentCheck" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_home_24"
                    android:padding="10dp"
                    android:id="@+id/hostelIcon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/hostelIcon"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Hostel residency"/>
                    <ViewSwitcher
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/hostel_vs">
                        <TextView
                            android:id="@+id/hostelValueViewer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="No"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="TouchTargetSizeCheck" />
                        <EditText
                            android:id="@+id/hostelValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:text="No"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </ViewSwitcher>
                </LinearLayout>

                <ImageView
                    android:id="@+id/hostelEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/baseline_edit_24"
                    tools:ignore="SpeakableTextPresentCheck" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_account_circle_24"
                    android:padding="10dp"
                    android:id="@+id/genderIcon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/genderIcon"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Gender"/>
                    <ViewSwitcher
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/gender_vs">
                        <TextView
                            android:id="@+id/genderValueViewer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:maxLength="6"
                            android:text="Male"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="TouchTargetSizeCheck" />
                        <EditText
                            android:id="@+id/genderValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:maxLength="6"
                            android:text="Male"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </ViewSwitcher>
                </LinearLayout>

                <ImageView
                    android:id="@+id/genderEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/baseline_edit_24"
                    tools:ignore="SpeakableTextPresentCheck" />
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/login_button_background"
                android:text="Save Changes"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:id="@+id/saveButton"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>

</ScrollView>