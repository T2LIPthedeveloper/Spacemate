<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings_assets.SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        app:navigationIcon="@drawable/baseline_menu_24"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        </androidx.appcompat.widget.Toolbar>

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:hint="Search settings"
        android:background="@drawable/login_edittext_background"
        android:layout_below="@id/toolbar"
        android:layout_alignParentLeft="true"
        android:padding="12dp"
        android:layout_margin="@dimen/fab_margin"
        android:id="@+id/settings_search"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_toEndOf="@+id/settings_search"
        android:background="@color/white"
        android:contentDescription="A magnifying glass icon"
        android:src="@drawable/search" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:background="@drawable/settings_button_background"
        android:text="Notifications"
        android:textColor="@color/black"
        android:id="@+id/notif_btn"
        android:layout_below="@id/settings_search"
        android:padding="16dp"
        android:layout_margin="@dimen/fab_margin"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:background="@drawable/settings_button_background"
        android:text="Change Password"
        android:textColor="@color/black"
        android:id="@+id/changepassword_btn"
        android:layout_below="@id/notif_btn"
        android:padding="16dp"
        android:layout_margin="@dimen/fab_margin"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:background="@drawable/settings_button_background"
        android:text="Delete Account"
        android:textColor="@color/black"
        android:id="@+id/deleteacc_btn"
        android:layout_below="@id/changepassword_btn"
        android:padding="16dp"
        android:layout_margin="@dimen/fab_margin"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:background="@drawable/settings_button_background"
        android:text="Sign Out"
        android:textColor="@color/black"
        android:id="@+id/signout_btn"
        android:layout_below="@id/deleteacc_btn"
        android:padding="16dp"
        android:layout_margin="@dimen/fab_margin"
        />

</RelativeLayout>